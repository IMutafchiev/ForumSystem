@model ForumSystem.App.Areas.Admin.ViewModels.Topics.DetailsTopicViewModel
@{
    ViewData["Title"] = "Details";
}

    <div class="text-center">
        <div class="card">
            <div class="card-header">
                @Model.Title
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p>@Model.Content</p>
                    <footer class="row text-muted font-italic">
                        <span class="col-md-4 text-left">Created On - @Model.CreatedOn</span>
                        <span class="col-md-8 text-right">Author - @Model.AuthorUserName</span>
                    </footer>
                </blockquote>
            </div>
        </div>

        <br />
        <ul class="list-group">
            @foreach (var post in Model.Posts)
            {
            <li class="list-group-item m-3">
                <div class="card-header row">
                    <span class="col-md-4 p-2 text-left text-muted">Created On @post.CreatedOn</span>
                    <div class="text-right col-md-8">
                        <a class="btn btn-info col-md-2 p-2" asp-area="Admin" asp-controller="Topic" asp-action="Edit" asp-route-id="@post.Id">Edit</a>
                        <a class="btn btn-danger col-md-2 p-2" asp-area="Admin" asp-controller="Topic" asp-action="Delete" asp-route-id="@post.Id">Delete</a>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@post.Title</h5>
                    <p class="card-text">@post.Content<p>
                </div>
                <div class="card-footer text-muted row">
                    @post.Comments.Count() <a asp-area="Admin" asp-controller="Comment" asp-action="Add" class="btn btn-primary text-center col-md-2"><i class="fa fa-comment" aria-hidden="true">comments</i></a>
                    <span class="text-right col-md-10">Author - @post.Author.UserName</span>

                </div>
            </li>
            }
        </ul>
        <div class="row text-right">
            <a asp-area="Admin" asp-controller="Posts" asp-action="Create" class="btn btn-success col-md-2 text-center"> Create Post</a>
        </div>
     </div>
